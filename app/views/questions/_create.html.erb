
<div class="question" id="<%= @question.id %>">
  <h3><%= @question.title %></h3>
  <p><%= @question.description %></p>
  <p>Votes: <span class="vote"><%= @question.vote %></span></p>
  <ul>
      <li class="button upvote"><%= link_to 'flawless', upvote_question_path(@question) %></li>
      <li class="button downvote"><%= link_to "that's that ish I don't like", downvote_question_path(@question) %></li>
      <li class="button"><%= link_to 'Show', question_path(@question) %></li>
      <li class="button"><%= link_to 'Edit', edit_question_path(@question)%></li>
      <li class="button"><%= link_to 'Obliterate', question_path(@question), class: "delete-question" %></li>
    </ul>
</div>
